<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/first_value"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:hint="First Value"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <EditText
        android:id="@+id/second_value"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:hint="Second Value"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <Button
        android:onClick="doCalculation"
        android:id="@+id/addition_button"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:text="Add(+)"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <Button
        android:onClick="doCalculation"
        android:id="@+id/subtraction_button"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:text="substract(-)"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <Button
        android:onClick="doCalculation"
        android:id="@+id/multiply_button"
        android:layout_width="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:text="multiply(*)"
        android:layout_height="50dp"/>
    <Button
        android:onClick="doCalculation"
        android:id="@+id/division_button"
        android:layout_width="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:text="division(/)"
        android:layout_height="50dp"/>
    <TextView
        android:id="@+id/answer_box"
        android:gravity="center"
        android:textSize="25sp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>